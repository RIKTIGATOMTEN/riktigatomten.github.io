---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title?: string;
	description?: string;
}

const { title = "RIKTIGATOMTEN", description = "Personal projects and development portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<ViewTransitions />
		<script is:inline>
			// This runs immediately to prevent flash
			(function() {
				const savedTheme = localStorage.getItem('theme');
				const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
				if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
					document.documentElement.classList.add('dark');
				} else {
					document.documentElement.classList.remove('dark');
				}
			})();
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		/* VitePress-like colors */
		--vp-c-bg: #ffffff;
		--vp-c-bg-soft: #f6f6f7;
		--vp-c-bg-mute: #e3e3e5;
		--vp-c-divider: rgba(60, 60, 67, 0.12);
		--vp-c-text-1: rgba(60, 60, 67, 1);
		--vp-c-text-2: rgba(60, 60, 67, 0.78);
		--vp-c-text-3: rgba(60, 60, 67, 0.56);
		--vp-c-brand: #646cff;
		--vp-c-brand-light: #747bff;
		--vp-c-brand-dark: #535bf2;
		--vp-c-brand-soft: rgba(100, 108, 255, 0.14);
		--vp-c-green: #10b981;
		--vp-c-green-soft: rgba(16, 185, 129, 0.14);
		--vp-c-yellow: #d97706;
		--vp-c-yellow-soft: rgba(234, 179, 8, 0.14);
		--vp-c-red: #f43f5e;
		--vp-c-red-soft: rgba(244, 63, 94, 0.14);
		
		--vp-nav-height: 64px;
		--vp-sidebar-width: 272px;
		--vp-home-hero-image-background-image: linear-gradient(-45deg, #bd34fe 50%, #47caff 50%);
		--vp-home-hero-image-filter: blur(68px);
	}

	.dark {
		--vp-c-bg: #1b1b1f;
		--vp-c-bg-soft: #222224;
		--vp-c-bg-mute: #2c2c30;
		--vp-c-divider: rgba(84, 84, 84, 0.48);
		--vp-c-text-1: rgba(255, 255, 245, 0.86);
		--vp-c-text-2: rgba(235, 235, 245, 0.6);
		--vp-c-text-3: rgba(235, 235, 245, 0.38);
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	html {
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}

	html, body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
		background-color: var(--vp-c-bg);
		color: var(--vp-c-text-1);
		transition: background-color 0.3s, color 0.3s;
	}

	a {
		color: var(--vp-c-brand);
		text-decoration: none;
		transition: color 0.25s;
	}

	a:hover {
		color: var(--vp-c-brand-dark);
	}
</style>
