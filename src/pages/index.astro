		<Hero 
			name="RIKTIGATOMTEN"
			tagline="Developer"
			description="Hey, I'm a developer who builds tools and Discord bots. Mostly working on CoreBot and other open source stuff."
			primaryAction={{
				text: "View Projects",
				href: "/projects"
			}}
			secondaryAction={{
				text: "GitHub",
				href: "https://github.com/RIKTIGATOMTEN"
			}}
		/>
		<Features features={features} />
	</main>
	<Footer />
</Layout>
