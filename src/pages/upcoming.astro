---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Footer from '../components/Footer.astro';

const upcomingProjects: { title: string; description: string; tags: string[]; status: 'coming-soon' }[] = [
	// Add upcoming projects here
];
---

<Layout title="Upcoming - RIKTIGATOMTEN">
	<Navbar currentPath="/upcoming" />
	<main class="page-container">
		<div class="page-header">
			<h1 class="page-title">Upcoming Projects</h1>
			<p class="page-description">
				Projects currently in development or planned for the future. Stay tuned for updates!
			</p>
		</div>
		
		<div class="projects-grid">
			{upcomingProjects.map((project) => (
				<ProjectCard {...project} />
			))}
		</div>

		<div class="stay-updated">
			<h2>Stay Updated</h2>
			<p>
				Follow me on <a href="https://github.com/RIKTIGATOMTEN" target="_blank" rel="noopener">GitHub</a> 
				to get notified when new projects are released.
			</p>
		</div>
	</main>
	<Footer />
</Layout>

<style>
	.page-container {
		max-width: 1152px;
		margin: 0 auto;
		padding: calc(var(--vp-nav-height) + 48px) 24px 96px;
	}

	.page-header {
		margin-bottom: 48px;
		text-align: center;
	}

	.page-title {
		font-size: 40px;
		font-weight: 700;
		color: var(--vp-c-text-1);
		margin-bottom: 16px;
	}

	.page-description {
		font-size: 18px;
		color: var(--vp-c-text-2);
		max-width: 600px;
		margin: 0 auto;
		line-height: 1.6;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(1, 1fr);
		gap: 24px;
	}

	.stay-updated {
		margin-top: 64px;
		padding: 32px;
		background: var(--vp-c-bg-soft);
		border: 1px solid var(--vp-c-divider);
		border-radius: 12px;
		text-align: center;
	}

	.stay-updated h2 {
		font-size: 24px;
		font-weight: 600;
		color: var(--vp-c-text-1);
		margin-bottom: 12px;
	}

	.stay-updated p {
		font-size: 16px;
		color: var(--vp-c-text-2);
		line-height: 1.6;
	}

	.stay-updated a {
		color: var(--vp-c-brand);
		font-weight: 500;
	}

	.stay-updated a:hover {
		text-decoration: underline;
	}

	@media (min-width: 640px) {
		.projects-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (min-width: 960px) {
		.page-container {
			padding: calc(var(--vp-nav-height) + 64px) 64px 128px;
		}

		.page-title {
			font-size: 48px;
		}

		.projects-grid {
			grid-template-columns: repeat(3, 1fr);
		}
	}
</style>
