---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
	<div class="footer-container">
		<div class="footer-content">
			<p class="copyright">
				Released under the MIT License.<br />
				Copyright Â© {currentYear} RIKTIGATOMTEN
			</p>
		</div>
	</div>
</footer>

<style>
	.footer {
		border-top: 1px solid var(--vp-c-divider);
		padding: 32px 24px;
	}

	.footer-container {
		max-width: 1152px;
		margin: 0 auto;
	}

	.footer-content {
		text-align: center;
	}

	.copyright {
		font-size: 14px;
		color: var(--vp-c-text-2);
		line-height: 1.8;
	}

	@media (min-width: 960px) {
		.footer {
			padding: 32px 64px;
		}
	}
</style>
