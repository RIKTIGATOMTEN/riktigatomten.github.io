---
interface Props {
	name: string;
	tagline: string;
	description?: string;
	primaryAction?: {
		text: string;
		href: string;
	};
	secondaryAction?: {
		text: string;
		href: string;
	};
}

const { name, tagline, description, primaryAction, secondaryAction } = Astro.props;
---

<section class="hero">
	<div class="hero-container">
		<div class="hero-content">
			<h1 class="hero-name">{name}</h1>
			<p class="hero-tagline">{tagline}</p>
			{description && <p class="hero-description">{description}</p>}
			
			<div class="hero-actions">
				{primaryAction && (
					<a href={primaryAction.href} class="action-btn primary">
						{primaryAction.text}
					</a>
				)}
				{secondaryAction && (
					<a href={secondaryAction.href} class="action-btn secondary">
						{secondaryAction.text}
					</a>
				)}
			</div>
		</div>

		<div class="hero-image">
			<div class="hero-image-bg"></div>
			<div class="hero-image-container">
				<slot name="image">
					<div class="default-hero-image">
						<svg xmlns="http://www.w3.org/2000/svg" width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.5" stroke-linecap="round" stroke-linejoin="round">
							<path d="M12 2L2 7l10 5 10-5-10-5z"></path>
							<path d="M2 17l10 5 10-5"></path>
							<path d="M2 12l10 5 10-5"></path>
						</svg>
					</div>
				</slot>
			</div>
		</div>
	</div>
</section>

<style>
	.hero {
		padding: 64px 24px 96px;
		margin-top: var(--vp-nav-height);
	}

	.hero-container {
		max-width: 1152px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.hero-content {
		max-width: 592px;
	}

	.hero-name {
		font-size: 48px;
		line-height: 1.2;
		font-weight: 700;
		margin-bottom: 16px;
		color: var(--vp-c-text-1);
	}

	.hero-tagline {
		font-size: 32px;
		line-height: 1.4;
		font-weight: 600;
		color: var(--vp-c-text-1);
		margin-bottom: 16px;
	}

	.hero-description {
		font-size: 18px;
		line-height: 1.6;
		color: var(--vp-c-text-2);
		margin-bottom: 32px;
	}

	.hero-actions {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 16px;
	}

	.action-btn {
		display: inline-block;
		padding: 12px 24px;
		font-size: 16px;
		font-weight: 600;
		border-radius: 24px;
		transition: all 0.25s;
	}

	.action-btn.primary {
		background: var(--vp-c-brand);
		color: white;
	}

	.action-btn.primary:hover {
		background: var(--vp-c-brand-dark);
	}

	.action-btn.secondary {
		background: var(--vp-c-bg-soft);
		color: var(--vp-c-text-1);
		border: 1px solid var(--vp-c-divider);
	}

	.action-btn.secondary:hover {
		background: var(--vp-c-bg-mute);
	}

	.hero-image {
		position: relative;
		margin-top: 48px;
	}

	.hero-image-bg {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 320px;
		height: 320px;
		background-image: var(--vp-home-hero-image-background-image);
		filter: var(--vp-home-hero-image-filter);
		opacity: 0.8;
		border-radius: 50%;
	}

	.hero-image-container {
		position: relative;
		z-index: 1;
	}

	.default-hero-image {
		color: var(--vp-c-brand);
	}

	@media (min-width: 960px) {
		.hero {
			padding: 96px 64px 128px;
		}

		.hero-container {
			flex-direction: row;
			text-align: left;
		}

		.hero-content {
			flex: 1;
			padding-right: 64px;
		}

		.hero-name {
			font-size: 64px;
		}

		.hero-tagline {
			font-size: 40px;
		}

		.hero-actions {
			justify-content: flex-start;
		}

		.hero-image {
			margin-top: 0;
		}

		.hero-image-bg {
			width: 400px;
			height: 400px;
		}
	}
</style>
